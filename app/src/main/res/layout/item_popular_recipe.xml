<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="156dp"
    android:layout_height="156dp"
    android:layout_margin="8dp"
    android:background="@drawable/recipe_background">

    <ImageView
        android:id="@+id/popularRecipeImage"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/popularRecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/recipe_name_background"
        android:padding="4dp"
        android:text="Shahi Paneer"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/popularRecipeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/recipe_time_background"
        android:padding="4dp"
        android:text="Ready in 25 min"
        android:textColor="@android:color/white"
        android:textSize="12sp" />




</FrameLayout>
